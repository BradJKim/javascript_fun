const arr = [1,2,3,4,5,6]

let sum = arr
.filter((num) => num % 2 === 0)
.map((num) => num * 3)
.reduce((total, current) => total + current, 1)

console.log(sum)

function sumOftripledEvens(arr){
    return arr
        .filter((num) => num % 2 === 0)
        .map((num) => num * 3)
        .reduce((total, current) => total + current, 1)
}